# SliTaz package receipt.

PACKAGE="libsoup"
VERSION="2.74.1"
CATEGORY="x-window"
SHORT_DESC="GNOME Soup Library."
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
TARBALL="$PACKAGE-$VERSION.tar.xz"
WEB_SITE="https://live.gnome.org/LibSoup/"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"
HOST_ARCH="x86_64 i486 arm"

DEPENDS="glib glibc-base libffi libgio libxml2 pcre zlib"
BUILD_DEPENDS="glib-networking-dev libgio-dev krb5-dev \
libxml2-dev libgcrypt-dev libtasn1-dev gnutls-dev zlib-dev \
libgnome-keyring-dev sqlite-dev dbus-dev brotli "

# Handle cross compilation.
case "$ARCH" in
	x86_64|i?86) BUILD_DEPENDS="$BUILD_DEPENDS gobject-introspection-dev" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
	mkdir build && cd build
	meson --prefix=/usr .. &&
	ninja && ninja install
	#~ ./configure \
		#~ --with-html-dir=/usr/share/doc \
		#~ --disable-gtk-doc \
		#~ $CONFIGURE_ARGS &&
	#~ make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib64
	cp -a $install/usr/lib64/*.so* $fs/usr/lib64

	# move to libsoup-gnome package
	rm -f $fs/usr/lib64/libsoup-gnome*
}
