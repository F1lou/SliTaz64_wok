# SliTaz package receipt.

PACKAGE="asciidoc"
VERSION="10.2.0"
CATEGORY="system-tools"
SHORT_DESC="Text based document generation"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://asciidoc-py.github.io/index.html"
TARBALL="$PACKAGE-$VERSION.tar.gz"
#~ WGET_URL="$SF_MIRROR/project/asciidoc/asciidoc/$VERSION/$TARBALL"
WGET_URL="https://github.com/asciidoc-py/asciidoc-py/archive/refs/tags/$VERSION.tar.gz"
DEPENDS="py3k"
BUILD_DEPENDS="libxml2-tools docbook-xml docbook-xsl libxslt python3-pip
	python3-setuptools"

# Rules to configure and make the package.
compile_rules()
{
	autoconf
	./configure \
		--sysconfdir=/etc \
		$CONFIGURE_ARGS &&
	DESTDIR=$DESTDIR make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/etc $fs
	cp -a $install/usr/bin $fs/usr
}
