# SliTaz package receipt.

PACKAGE="harfbuzz"
VERSION="3.2.0"
CATEGORY="system-tools"
SHORT_DESC="OpenType text shaping engine."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.freedesktop.org/wiki/Software/HarfBuzz/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://github.com/$PACKAGE/$PACKAGE/releases/download/$VERSION/$TARBALL"
DEPENDS="cairo freetype gcc-lib-base glib libffi pcre"
BUILD_DEPENDS="gcc glib-dev gtk-doc fontconfig-dev cairo-dev freetype-dev
	python3-pygments libiconv-dev libbsd-dev gobject-introspection-dev"

HOST_ARCH="x86_64 i486 arm"

# Rules to configure and make the package.
compile_rules()
{
	mkdir build && cd build &&
	export LDFLAGS="$LDFLAGS -liconv"
	meson --prefix=/usr -Ddocs=disabled .. &&
	ninja
	DESTDIR=$DESTDIR ninja install
	
	#~ export LDFLAGS="$LDFLAGS -lstdc++"

	#~ ./configure		\
		#~ --with-freetype	\
		#~ --with-glib	\
		#~ --with-gobject	\
		#~ --with-icu=no	\
		#~ $CONFIGURE_ARGS &&
	#~ make -j 1 &&
	#~ make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib64

	#cp -a $install/usr/bin		$fs/usr
	cp -a $install/usr/lib64/*.so*	$fs/usr/lib64
}
