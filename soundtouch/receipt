# SliTaz package receipt.

PACKAGE="soundtouch"
VERSION="2.3.1"
CATEGORY="multimedia"
SHORT_DESC="An audio processing library."
MAINTAINER="slaxemulator@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://www.surina.net/soundtouch/"

TARBALL="$VERSION.tar.gz"
WGET_URL="https://codeberg.org/$PACKAGE/$PACKAGE/archive/$TARBALL"

DEPENDS="gcc-lib-base"
BUILD_DEPENDS="automake libtool libiconv-dev"

# Rules to configure and make the package.
compile_rules()
{
	export LDFLAGS="$LDFLAGS -liconv"
	[ -d config/m4 ] || mkdir -p config/m4
	./bootstrap &&
	./configure		\
		--prefix=/usr	\
		--enable-shared	\
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib

	cp -a $install/usr/bin		$fs/usr
	cp -a $install/usr/lib/*.so*	$fs/usr/lib
}
