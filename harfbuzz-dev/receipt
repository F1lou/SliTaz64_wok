# SliTaz package receipt.

PACKAGE="harfbuzz-dev"
VERSION="3.2.0"
CATEGORY="development"
SHORT_DESC="Harfbuzz development files."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.freedesktop.org/wiki/Software/HarfBuzz/"

DEPENDS="bzip2-dev freetype-dev glib-dev harfbuzz libffi-dev 
	libpng-dev pcre-dev"
WANTED="harfbuzz"

HOST_ARCH="x86_64 i486 arm"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib $fs/usr/lib64
	cp -a $install/usr/include $fs/usr
	cp -a $install/usr/share $fs/usr
	cp -a $install/usr/lib64/pkgconfig $fs/usr/lib/
	cp -a $install/usr/lib64/cmake $fs/usr/lib/
	cp -a $install/usr/lib64/gir* $fs/usr/lib64/
}
