# SliTaz package receipt.

PACKAGE="glib-networking"
VERSION="2.66.0"
CATEGORY="x-window"
SHORT_DESC="TLS support for glib."
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://www.gtk.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

DEPENDS="glib libgio libgnutls libunistring"
BUILD_DEPENDS="glib-dev gnutls-dev libgio-dev libgnutls libunistring-dev"

HOST_ARCH="x86_64 i486 arm"

# Handle cross compilation.
case "$ARCH" in
	x86_64|i?86) BUILD_DEPENDS="$BUILD_DEPENDS intltool automake autoconf" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
	mkdir build && cd build &&

	meson --prefix=/usr          \
		  -Dlibproxy=disabled \
		  -Dopenssl=enabled .. &&
	ninja
	
	DESTDIR=$DESTDIR ninja install

	#~ ./configure				\
		#~ --prefix=/usr			\
		#~ --without-ca-certificates	\
		#~ $CONFIGURE_ARGS &&
	#~ make &&
	#~ make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib64 $fs/usr/
}
