# SliTaz package receipt.

PACKAGE="patchelf"
VERSION="0.14.3"
CATEGORY="development"
SHORT_DESC="Modify the dynamic linker and RPATH of ELF executables."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://nixos.org/patchelf.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/NixOS/$PACKAGE/archive/$VERSION.tar.gz"

DEPENDS="gcc-lib-base"
BUILD_DEPENDS="automake gcc libiconv-dev"

# Rules to configure and make the package.
compile_rules()
{
	export LDFLAGS="$LDFLAGS -liconv"
	./bootstrap.sh &&
	./configure			\
		--prefix=/usr		\
		--mandir=/usr/share/man	\
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}
