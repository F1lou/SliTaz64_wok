# SliTaz package receipt.

PACKAGE="protobuf-python"
VERSION="3.17.3"
CATEGORY="network"
SHORT_DESC="Protocol buffers - Google's data interchange format (python)."
MAINTAINER="slaxemulator@gmail.com"
LICENSE="BSD"
WEB_SITE="https://github.com/protocolbuffers/protobuf/"

SOURCE="protobuf"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}archive/v$VERSION.tar.gz"

DEPENDS="protobuf py3k"
BUILD_DEPENDS="libatomic protobuf-dev py3k-dev python3-setuptools \
	python3-pip"

# Rules to configure and make the package.
compile_rules()
{
	cd $src/python
	python3 setup.py install --prefix=/usr --root $DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
}
