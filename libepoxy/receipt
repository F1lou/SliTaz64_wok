# SliTaz package receipt.

PACKAGE="libepoxy"
VERSION="1.5.9"
CATEGORY="x-window"
SHORT_DESC="GL handling libary."
MAINTAINER="nhc1@gmx.net"
LICENSE="other"
WEB_SITE="https://github.com/anholt/libepoxy"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://github.com/anholt/$PACKAGE/releases/download/$VERSION/$TARBALL"

DEPENDS="mesa"
BUILD_DEPENDS="mesa-dev xorg-dev xorg-libXshmfence-dev libiconv-dev"

HOST_ARCH="x86_64"

# Rules to configure and make the package.
compile_rules()
{
	export LDFLAGS="$LDFLAGS -liconv"
	mkdir build && cd build &&
	meson --prefix=/usr -Dtests=false .. &&
	ninja &&
	ninja install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib64
	
	cp -a $install/usr/lib64/*.so* $fs/usr/lib64
}
