# SliTaz package receipt.

PACKAGE="graphviz"
VERSION="2.50.0"
CATEGORY="x-window"
SHORT_DESC="Automatic graph drawing."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="Eclipse"
WEB_SITE="https://www.graphviz.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://gitlab.com/$PACKAGE/$PACKAGE/-/archive/$VERSION/$TARBALL"

DEPENDS="expat gcc-lib-base jpeg libpng librsvg libxml2 pcre 
	util-linux-uuid zlib libnsl"
BUILD_DEPENDS="py3k py3k-dev gcc expat-dev gdk-pixbuf-dev guile-dev jpeg-dev 
	libcroco-dev libgd-dev libpng-dev librsvg-dev libxml2-dev 
	ocaml pango-dev pcre-dev pkg-config  libnsl-dev
	python-dev ruby-dev swig tcl-dev tk-dev util-linux-uuid-dev 
	xorg-dev zlib-dev automake sed liblzma-dev libbsd-dev lua-dev" # php-cli php-dev

# Rules to configure and make the package.
compile_rules()
{
	#~ sed -i 's/.*php5.*/&\n	sed -i "s|char .type_name;|const \&|" gv_php.cpp/' \
		#~ tclpkg/gv/Makefile*
	#~ sed -i 's/.*PHPWRITE.*/    TSRMLS_FETCH();\n&/' \
		#~ tclpkg/gv/gv_php_init.c

	CFLAGS="$CFLAGS "
	./autogen.sh
	./configure					\
		--prefix=/usr			\
		--infodir=/usr/share/info	\
		--disable-static		\
		--enable-shared			\
		--disable-gtk			\
		--disable-gtkgl			\
		--disable-gtkglext		\
		--with-pangocairo		\
		--with-x				\
		--with-gdk-pixbuf		\
		--with-ghostscript=no	\
		--without-gtk			\
		--without-gtkgl			\
		--without-gtkglext		\
		--without-glade			\
		--with-ortho=no			\
		--disable-sharp			\
		--disable-java			\
		--enable-guile=yes		\
		--with-rsvg=yes			\
		--with-png=yes			\
		--with-jpeg=yes			\
		--enable-lua=yes		\
		--enable-ocaml=yes		\
		--enable-php=yes		\
		--enable-ruby=yes		\
		--enable-tcl=yes		\
		--enable-python3=yes	\
		--disable-python23		\
		--disable-python24		\
		--disable-python25		\
		--disable-python26		\
		--disable-r				\
		--mandir=/usr/share/man	\
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	mkdir -p $fs/usr/share/graphviz

	cp -a $install/usr/lib/*.so*			$fs/usr/lib
	cp -a $install/usr/lib/pkgconfig		$fs/usr/lib/
	cp -a $install/usr/lib/graphviz			$fs/usr/lib/
	rm -f $fs/usr/lib/graphviz/*.la
	#~ cp -a $install/usr/share/graphviz/lefty		$fs/usr/share/graphviz
	cp -a $install/usr/share/graphviz/gvpr		$fs/usr/share/graphviz
	cp -a $install/usr/share/graphviz/graphs	$fs/usr/share/graphviz
	cp -a $install/usr/bin				$fs/usr
}
