# SliTaz package receipt.

PACKAGE="xorg-fonttosfnt"
VERSION="1.2.2"
CATEGORY="x-window"
TAGS="utility xorg fonts"
SHORT_DESC="Wrap a bitmap font in a sfnt (TrueType) wrapper."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://xorg.freedesktop.org/"

SOURCE="fonttosfnt"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WGET_URL="$WEB_SITE/releases/individual/app/$TARBALL"

DEPENDS="freetype xproto fontenc xorg-libfontenc xorg-libX11"
BUILD_DEPENDS="xorg-libfontenc-dev freetype-dev xorg-xproto"

# Rules to configure and make the package.ls sr	
compile_rules()
{
	./configure			\
		--prefix=/usr		\
		--mandir=/usr/share/man	\
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
}
