# SliTaz package receipt.

PACKAGE="evince"
VERSION="3.39.2"
CATEGORY="office"
SHORT_DESC="Document viewer for Gnome"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.xz"
WEB_SITE="http://projects.gnome.org/evince/"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION:0:4}/$TARBALL"
TAGS="viewer pdf tiff ps postscript dvi"

DEPENDS="lcms poppler tiff dbus-glib glib util-linux-uuid"
BUILD_DEPENDS="gnome-doc-utils-dev docbook-xml libxml2-dev \
gnome-icon-theme gtk+3-dev intltool lcms-dev util-linux-uuid-dev \
poppler-dev tiff-dev dbus-glib-dev xorg-dev pixman-dev \
libepoxy-dev mesa-dev adwaita-icon-theme libhandy-dev libiconv-dev \
gobject-introspection-dev"

# Rules to configure and make the package.
compile_rules()
{
	mkdir build && cd build
	CXXFLAGS="$CXXFLAGS -liconv"
	meson --prefix=/usr		\
	--libexecdir=/usr/lib/$PACKAGE \
	-Dgtk_doc=false 		\
	-Dsystemduserunitdir=no \
	-Dnautilus=false		\
	-Dcomics=disabled		\
	-Dkeyring=disabled .. &&
	ninja && ninja install

	#~ ./configure --prefix=/usr \
		#~ --libexecdir=/usr/lib/$PACKAGE \
		#~ --disable-nautilus \
		#~ --disable-scrollkeeper \
		#~ --disable-comics \
		#~ --without-gconf \
		#~ --without-keyring \
		#~ --disable-schemas-install \
		#~ --disable-gtk-doc-html \
		#~ --with-help-formats=none \
		#~ --disable-help \
		#~ $CONFIGURE_ARGS &&
	#~ make && make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/glib-2.0 $fs/usr/lib64 $fs/usr/share/applications
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib64/*.so* $fs/usr/lib64
	cp -a $install/usr/lib64/evince $fs/usr/lib64

	cp -a $install/usr/share/dbus-1 $fs/usr/share
	cp -a $install/usr/share/icons $fs/usr/share
	cp -a $install/usr/share/evince $fs/usr/share
	cp -a $install/usr/share/glib-2.0/schemas $fs/usr/share/glib-2.0
	cp -a $stuff/evince.desktop $fs/usr/share/applications

	# Removing unwanted files
	# find $fs/usr/lib -name "*.*a" -exec rm -rf {} \;
}
